<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
    
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#00CC99" >

        <TextView
            android:id="@+id/tvshezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="-    设置"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/tvshezhi"
            android:layout_alignBottom="@+id/tvshezhi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="#00CC99"
            android:text="保存"
            android:textColor="#F5F5F5"
            android:textSize="15dp" />
<ImageView
             android:id="@+id/ivsettingback"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:src="@drawable/back2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="14dp"
        android:text="课前提醒" />

    <CheckBox
        android:id="@+id/ck1"
        style="@style/MyCheckBox"
        android:layout_width="87dp"
        android:layout_height="17dp"
	    android:layout_alignBaseline="@+id/tv1"
	    android:layout_alignBottom="@+id/tv1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="CheckBox" />


    <View
        android:id="@+id/v1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv1" 
        android:layout_marginTop="10dp"
        android:background="#F5F5F5"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv1"
        android:layout_below="@+id/v1"
        android:layout_marginTop="15dp"
        android:text="借书提醒" />

	<CheckBox
	    android:id="@+id/ck2"
	    style="@style/MyCheckBox"
	    android:layout_width="87dp"
	    android:layout_height="17dp"
	    android:layout_alignBaseline="@+id/tv2"
	    android:layout_alignBottom="@+id/tv2"
	    android:layout_alignLeft="@+id/ck1"
	    android:text="CheckBox" />

	<View
	    android:id="@+id/v2"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/ck2" 
	    android:layout_marginTop="10dp"
	    android:background="#F5F5F5"/>

	<TextView
	    android:id="@+id/tv3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tv2"
	    android:layout_below="@+id/v2"
	    android:layout_marginTop="15dp"
	    android:text="上课振动" />

	<CheckBox
	    android:id="@+id/ck3"
	    style="@style/MyCheckBox"
	    android:layout_width="87dp"
	    android:layout_height="17dp"
	    android:layout_alignBottom="@+id/tv3"
	    android:layout_alignLeft="@+id/ck2"
	    android:text="CheckBox" />


	<View
	    android:id="@+id/v4"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/tv3"
	    android:layout_marginTop="10dp"
	    android:background="#F5F5F5" />

	<TextView
	    android:id="@+id/tv5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tv3"
	    android:layout_below="@+id/v4"
	    android:layout_marginTop="15dp"
	    android:text="城      市" />

	<Spinner
	    android:id="@+id/sp1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/v4"
	    android:layout_marginTop="8dp"
	    android:layout_toLeftOf="@+id/ck3" />

	<Spinner
	    android:id="@+id/sp2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_alignBaseline="@+id/sp1"
	    android:layout_alignBottom="@+id/sp1"
	    android:layout_alignRight="@+id/ck3" />

	<View
	    android:id="@+id/v5"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:layout_marginTop="10dp"
	    android:background="#F5F5F5" />

	<TextView
	    android:id="@+id/tv6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tv5"
	    android:layout_below="@+id/v5"
	    android:layout_marginTop="15dp"
	    android:text="自动登录" />

	<CheckBox
	    android:id="@+id/ck6"
	    style="@style/MyCheckBox"
	    android:layout_width="87dp"
	    android:layout_height="17dp"
	    android:layout_alignTop="@+id/tv6"
	    android:layout_toRightOf="@+id/sp1"
	    android:text="CheckBox" />


	<View
	    android:id="@+id/v6"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/ck6"
	    android:layout_marginTop="10dp"
	    android:background="#F5F5F5" />

	<TextView
	    android:id="@+id/tv7"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tv6"
	    android:layout_below="@+id/v6"
	    android:layout_marginTop="15dp"
	    android:text="检测更新" />

</RelativeLayout>