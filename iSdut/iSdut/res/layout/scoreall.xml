<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <RelativeLayout
         
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:background="#00CC99"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/scoreallmenutitle"
            style="@style/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/myscore" />
        <ImageView
             android:id="@+id/ivscoreallback"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:src="@drawable/back2" />
    </RelativeLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d6d6d6" >

        <TextView
            android:id="@+id/gpaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gpaname"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cutview"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FFF" />

        <TextView
            android:id="@+id/gpanum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="30sp" />
    </TableRow>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/scorealllist" />

</LinearLayout>