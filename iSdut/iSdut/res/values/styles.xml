<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:background">#00CC99</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">20sp</item>
    </style>

    <style name="s_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25sp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#666</item>
        <item name="android:paddingLeft">35sp</item>
        <item name="android:singleLine">true</item> 
    </style>

    <style name="menu_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!-- item name="android:background">@android:color/transparent</item -->
    </style>

    <style name="menu_button2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="menu_button3" parent="@style/menu_button2">
        <item name="android:gravity">center</item>
    </style>
    <!-- 课表代码 -->
    <style name="ctext1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <style name="ctext2">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#31b3e1</item>
    </style>

    <style name="ctext3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#61b6e5</item>
    </style>

    

</resources>